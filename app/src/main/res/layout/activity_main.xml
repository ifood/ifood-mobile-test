<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:focusableInTouchMode="true"
	tools:context=".ui.main.MainActivity">

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/textInputLayoutNickname"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:hint="@string/enter_a_twitter_nickname"
		android:nextFocusLeft="@id/textInputLayoutNickname"
		android:nextFocusUp="@id/textInputLayoutNickname"
		app:layout_constraintEnd_toStartOf="@id/materialButtonSend"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/textInputEditTextNickname"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:imeOptions="actionSend"
			android:inputType="text" />

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.button.MaterialButton
		android:id="@+id/materialButtonSend"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:text="@string/send"
		app:layout_constraintBottom_toBottomOf="@id/textInputLayoutNickname"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/textInputLayoutNickname" />

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshTweets"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/textInputLayoutNickname">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recyclerViewTweets"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:itemCount="5"
			tools:listitem="@layout/list_item_tweet"
			tools:orientation="vertical"
			tools:scrollbars="vertical"
			tools:spanCount="2" />

	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>