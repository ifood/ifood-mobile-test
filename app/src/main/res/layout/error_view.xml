<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
            android:id="@+id/errorViewImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp"
            android:contentDescription="@null"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

    <TextView
            android:id="@+id/errorViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Error.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorViewImage"
            android:layout_margin="16dp"/>

    <Button
            android:id="@+id/errorViewRetryBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_retry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorViewText"
            android:layout_margin="16dp"
            android:padding="10dp"/>

</android.support.constraint.ConstraintLayout>