<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.tweets.SentimentalAnalysisFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clSentimentalAnalysis"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/tweet_item"
            layout="@layout/tweet_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_hdpi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/ivMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sad"
            app:layout_constraintTop_toBottomOf="@id/tweet_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_hdpi"
            android:text="@string/action_return"
            android:background="@drawable/bg_rounded_dark_blue"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
