<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SkeletonView">
        <attr name="skeleton_layout" format="reference" />
        <attr name="skeleton_elevation" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ErrorView">
        <attr name="erv_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="top" value="1" />
        </attr>

        <attr name="erv_elevation" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="ev_action_button_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>

        <attr name="ev_title" format="reference" />
        <attr name="ev_subtitle" format="reference" />
        <attr name="ev_action_button_text" format="reference" />
        <attr name="ev_icon" format="reference" />

        <attr name="ev_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="top" value="1" />
        </attr>

        <attr name="ev_elevation" format="dimension" />
    </declare-styleable>

</resources>
